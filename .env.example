# Môi trường ứng dụng: development | staging | production
APP_ENV=development

# Cổng server HTTP
SERVER_PORT=8080

# Cấu hình MQTT
MQTT_BROKER=tcp://localhost:1883
MQTT_TOPIC=devices/+/data
MQTT_USERNAME=myuser
MQTT_PASSWORD=mypassword

# Cấu hình Database (Postgres làm ví dụ)
DATABASE_DSN=postgres://user:password@localhost:5432/mydb?sslmode=disable

# Mức log: debug | info | warn | error
LOG_LEVEL=debug
