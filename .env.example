# ==============================
# ỨNG DỤNG
# ==============================

# Môi trường ứng dụng: development | staging | production
APP_ENV=development

# Số lượng worker xử lý
WORKER_COUNT=4

# Địa chỉ server HTTP + port
SERVER_ADDRESS=0.0.0.0:8080

# Thời gian timeout của server
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=60s

# Token tĩnh để test (không nên dùng production)
STATIC_TOKEN=supersecrettoken


# ==============================
# MQTT BROKER
# ==============================

# Ví dụ: tcp://localhost:1883 hoặc ssl://broker:8883
MQTT_BROKER=

# Topic nhận dữ liệu từ sensor
MQTT_TOPIC=

MQTT_USERNAME=
MQTT_PASSWORD=

# true nếu broker dùng SSL/TLS (port 8883)
MQTT_SSL=true


# ==============================
# LOGGING
# ==============================

# Mức log: debug | info | warn | error
LOG_LEVEL=debug


# ==============================
# DATA IDENTIFICATION
# ==============================

# Thuộc tính trong payload để định danh phòng/thiết bị
IDENTIFY_PROPERTY=roomId


# ==============================
# INFLUXDB
# ==============================

# Ví dụ: http://localhost:8086
INFLUXDB_URL=http://influxdb:8086

INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=

# Tên tổ chức
INFLUXDB_ORG=Hestia

# Tên bucket chứa dữ liệu
INFLUXDB_BUCKET=mybucket

# Token quản trị
INFLUXDB_ADMIN_TOKEN=

# 0 = không giới hạn
# Ví dụ: 7d = dữ liệu sẽ xoá sau 7 ngày
INFLUXDB_RETENTION=7d
